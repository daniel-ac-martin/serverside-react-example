{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "pretty": true
  },
  "lib": [
    "dom",
    "es2015"
  ],
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "coverage"
  ]
}
